{
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "no-new-object": 1,
        "object-shorthand": 1,
        "no-array-constructor": 1,
        "array-callback-return": 1,
        "quotes": 1,
        "prefer-template": 1,
        "no-useless-escape": 1,
        "wrap-iife": 1,
        "no-loop-func": 1,
        "prefer-rest-params": 1,
        "no-new-func": 1,
        "prefer-spread": 1,
        "no-confusing-arrow": 1,
        "no-useless-constructor": 1,
        "no-dupe-class-members": 1,
        "no-duplicate-imports": 1,
        "no-iterator": 1,
        "generator-star-spacing": 1,
        "dot-notation": 1,
        "eqeqeq": 1,
        "brace-style": 1,
        "spaced-comment": 1,
        "indent": 1,
        "space-before-blocks": 1,
        "keyword-spacing": 1,
        "space-infix-ops": 1,
        "eol-last": 1,
        "newline-per-chained-call": 1,
        "space-in-parens": 1,
        "array-bracket-spacing": 1,
        "object-curly-spacing": 1,
        "comma-style": 1,
        "comma-dangle": 1,
        "semi": 1,
        "radix": 1,
        "id-length": 1,
        "camelcase": 1,
        "new-cap": 1,
        "no-underscore-dangle": 1,
        "curly": 1,
        "one-var": [1, "never"],
        "padded-blocks": [1, "never"]
    }
}
